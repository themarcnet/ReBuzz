<UserControl x:Class="BuzzGUI.FileBrowser.SplitButtonControl.SplitButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BuzzGUI.FileBrowser.SplitButtonControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Button x:Name="btFolder" Margin="0,4,0,4"></Button>
        <Button x:Name="btFolderMenu" Grid.Column="1" Content="▼" FontSize="12" Margin="0,4,0,4" VerticalContentAlignment="Center">
            <Button.ContextMenu>
                <ContextMenu Name="cm"></ContextMenu>
            </Button.ContextMenu>
        </Button>
    </Grid>
</UserControl>
